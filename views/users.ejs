

<% if(locals.user.role=='admin'){ %>

  <% users.forEach(function (user) { %>
    
    <div class="container">
        <div class="row">

            <div class="card">
              <div class="card-header">
                <h4 class="card-title" style="color: white;">Users</h4>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table">
                    <thead class=" text-primary">
                      <th>
                        Email
                      </th>
                      <th>
                        Role
                      </th>
                      <th>
                        Password
                      </th>
                    </thead>
                    <tbody>  
                      <tr>
                        <td>
                            <h3><%= user.email %></h3>  
                        </td>
                        <td>
                            <h3><%= user.role %></h3> 
                        </td>
                        <td>
                            <h3><%= user.password %></h3>  
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
  </tr>                               
<% }) %>
<% } else{ %>  
  <p>Log in as admin to see this page</p>
<% } %>