<body>
  <section id="contact">
    <div class="container">
      <h2 class="text-uppercase text-center text-danger mb-3">
        <%= title %>
      </h2>
      <div class="row ">
        <div class="col-lg-3 mx-auto ">
          <form action="/login" method="POST">
            <div class="control-group ">
              <div class="mb-2 form-floating controls pb-2 "><input type="email" name="email" required
                  placeholder="enter your email" style="width: 306px;"><small
                  class="form-text text-danger help-block"></small></div>
            </div>
            <div class="control-group">
              <div class="mb-0  form-floating controls pb-2"><input type="password" name="password" required
                  placeholder="enter your password" style="width: 306px"><small
                  class="form-text text-danger help-block"></small></div>
            </div>
            <div id="success"></div>
            <div><button class="btn btn-primary btn-xl" a href="/" id="sendMessageButton" type="submit"
                style="width: 306px;">Log in</button>
            </div>

            <a href="/signup" class="btn btn-primary btn-xl" style="width: 306px;">Don't have an account?<br>Sign up</a>


          </form>
