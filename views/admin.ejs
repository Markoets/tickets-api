<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="./admin.css" type="text/css">
    <title>Admin Dashboard</title>
</head>

<body>
    <div id="app">
    <!-- SIDEBAR -->
    <input type="checkbox" class="menu__checkbox" id="sideview-crawl">
    <div class="side-view">
        <nav class="admin-view__menu">
            <div class="admin-view__header">
                <h3 class="panel-name">
                    <span>AdminPanel</span>
                </h3>
                <div class="menu-icon">
                    <label for="sideview-crawl" class="menu-bar">
                        <svg>
                            
                        </svg>
                    </label>
                </div>
            </div>
            <ul class="side-nav">
                <li class="side-nav__active">
                    <a href="/">
                        <svg>
                        </svg>
                        <span>Home</span>
                    </a>
                </li>
                <li class="tickets">
                    <a href="/ticketsAdd">
                        <svg>
                        </svg>
                        <span>Tickets</span>
                    </a>
                </li>
                <li class="actors">
                    <a href="/actorsAdd">
                        <svg>
                        </svg>
                        <span>Actors</span>
                    </a>
                </li>
                <li class="locations">
                    <a href="/locationsAdd">
                        <svg>
                        </svg>
                        <span>Locations</span>
                    </a>
                </li>
                
<% if(locals.user.role=='admin'){ %>
                <li class="locations">
                    <a href="/actorsDelete">
                        <svg>
                        </svg>
                        <span>Delete actors</span>
                    </a>
                </li>
                <li class="locations">
                    <a href="/ticketsDelete">
                        <svg>
                        </svg>
                        <span>Delete tickets</span>
                    </a>
                </li>
                <li class="locations">
                    <a href="/locationsDelete">
                        <svg>
                        </svg>
                        <span>Delete Locations</span>
                    </a>
                </li>
                <li class="users">
                    <a href="/users">
                        <svg>
                        </svg>
                        <span>Users info</span>
                    </a>
                </li>
            </ul>
        </nav>
        <% } %>
     
    </div>

    <!-- MAIN --->
    <main class="main main-content">
        <div class="header">
            <h1>Welcome back, Human <%= locals.user.email %> </h1>
            <h1>  <%= title %> </h1>
        </div>
        
        <div class="overview-cards">
            <div class="card product-card">
                <div class="title">
                    <h2>Tickets</h2>
                </div>
                <span class="content product-content">
                    <svg>
                   
                    </svg>
                    <div class="number">
                        <tr v-for="ticket in tickets">
                            <td>
                              {{tickets.length }}
                            </td>
                          </tr>
                    </div>
                </span>
            </div>
            <div class="card user-card">
                <div class="title">
                    <h2>Actors</h2>
                </div>
                <span class="content user-content">
                    <svg>
                        
                    </svg>
                    <div class="number">
                        <tr v-for="actor in actors">
                            <td>
                              {{actors.length }}
                            </td>
                          </tr>
                    </div>
                </span>
            </div>
            <div class="card order-card">
                <div class="title">
                    <h2>Locations</h2>
                </div>
                <span class="content order-content">
                    <svg>
                    
                    </svg>
                    <div class="number">
                        <tr v-for="location in locations2">
                            <td>
                              {{locations2.length }}
                            </td>
                          </tr>
                    </div>
                </span>
            </div>
        </div>
    </main>

    
         
</body>

</html>

