<html bs-app-theme="dark">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <title>Register</title>
  <link rel="stylesheet" href="https://bootstrapstudio.io/demo//embed//bootstrap/5/freelancer/bootstrap.min.css">
  <link rel="stylesheet" href="css/signup.css">
  <style bs-system-element="" bs-hidden=""></style>
  <style bs-system-element="" bs-hidden=""></style>
</head>

<body>
  <section id="contact">
    <div class="container">
      <h2 class="text-uppercase text-center text-secondary mb-3">Register</h2>
      <div class="row">
        <div class="col-lg-3 mx-auto">
          <form action="/signup" method="POST">
            <div class="control-group">
              <label for="role" class="form-label">Role</label>
              <select class="form-select" aria-label="Default select example" name="role">
                <option value="user">User</option>
                <option value="admin">Admin</option>
              </select>
              <div class="mb-2 form-floating controls pb-2"><input type="email" name="email" required
                  placeholder="enter your email" style="width: 306px;">
              </div>
            </div>
            <div class="control-group">
              <div class="mb-0 form-floating controls pb-2"><input type="password" name="password" required
                  placeholder="enter your password" style="width: 306px;"></div>
            </div>

            <div id="success"></div>
            <div><button class="btn btn-primary btn-xl" id="sendMessageButton" type="submit"
                style="width: 306px;">Register</button>
            </div>

            <a href="/login" class="btn btn-primary btn-xl" style="width: 306px;">Already have an account? <br>Login</a>


          </form>